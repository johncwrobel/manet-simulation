package System;

/**
 *
 * @author dsmith
 */
public class myPoint {
    public double x;
    public double y;

    public myPoint(double px, double py) {
        x = px;
        y = py;
    }

    public void add(myPoint p) {
        x += p.x;
        y += p.y;
    }

    public double size() {
        return Math.sqrt(x*x + y*y);
    }
}
